{
    "manifest_version": 3,
    "name": "YTcomments",
    "version": "1.0",
    "description": "A simple extension that adds a button to the YouTube search page",
    "permissions": [
      "activeTab"
    ],
    "content_scripts": [
      {
        "matches": ["*://www.youtube.com/*"],
        "js": ["content.js"],
        "run_at": "document_start"
      }
    ],
    "icons": { "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png" }
}
  